{
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
        "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
        "src/**/*.js",
        "!src/server.js"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 80,
            "functions": 80,
            "lines": 80,
            "statements": 80
        }
    }
}